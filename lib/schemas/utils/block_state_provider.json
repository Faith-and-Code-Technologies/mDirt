{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "blockStateProvider": {
            "title": "Block State Provider",
            "oneOf": [
                {
                    "type": "object",
                    "title": "simple_state_provider",
                    "properties": {
                        "block_state": {
                            "$ref": "block_state.json#/definitions/blockState"
                        }
                    }
                },
                {
                    "type": "object",
                    "title": "rotated_block_provider",
                    "properties": {
                        "block_state": {
                            "$ref": "block_state.json#/definitions/blockState"
                        }
                    }
                },
                {
                    "type": "object",
                    "title": "weighted_state_provider",
                    "properties": {
                        "entries": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "data": {
                                         "$ref": "block_state.json#/definitions/blockState"
                                    },
                                    "weight": {
                                        "type": "integer",
                                        "title": "Weight"
                                    }
                                }
                            }
                        }
                    }
                },
                {
                    "type": "object",
                    "title": "randomized_int_state_provider",
                    "properties": {
                        "property": {
                            "type": "string",
                            "title": "property"
                        },
                        "values": {
                            "title": "values",
                            "oneOf": [
                                {   
                                    "type": "object",
                                    "title": "Int",
                                    "properties": {
                                        "int": {
                                            "type": "integer"
                                        }
                                    }
                                },
                                {
                                    "type": "object",
                                    "title": "Object",
                                    "properties": {
                                        "object": {
                                            "$ref": "int_provider.json#/definitions/intProvider"
                                        }
                                    }
                                }
                            ]
                        },
                        "source": {
                            "$ref": "#/definitions/blockStateProvider"
                        }
                    }
                },
                {
                    "type": "object",
                    "title": "noise_provider",
                    "properties": {
                        "seed": {
                            "type": "integer"
                        },
                        "noise": {
                            "$ref": "../worldgen/noise.json/#definitions/noise"
                        },
                        "scale": {
                            "type": "number",
                            "minimum": 0
                        },
                        "slow_noise": {
                            "$ref": "../worldgen/noise.json/#definitions/noise"
                        },
                        "slow_scale": {
                            "type": "number",
                            "minimum": 0
                        },
                        "variety": {
                            "type": "object",
                            "title": "Variety",
                            "properties": {
                                "min_inclusive": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 63
                                },
                                "max_inclusive": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 64
                                }
                            }
                        },
                        "states": {
                            "$ref": "block_state.json#/definitions/blockState"
                        }
                    }
                },
                {
                    "type": "object",
                    "title": "noise_threshold_provider",
                    "properties": {
                        "seed": {
                            "type": "integer"
                        },
                        "noise": {
                            "$ref": "../worldgen/noise.json#/definitions/noise"
                        },
                        "scale": {
                            "type": "number",
                            "minimum": 0
                        },
                        "threshold": {
                            "type": "number",
                            "minimum": -1.0,
                            "maximum": 1.0
                        },
                        "high_chance": {
                            "type": "number",
                            "minimum": -1.0,
                            "maximum": 1.0
                        },
                        "states": {
                            "$comment": "This is where this schema begins to derail from from the Minecraft Wiki. Here should have three different block states arrays, doing the same thing. For JSON Schema to work with this, the authors of this schema were required to flatten it down into one.",
                            "type": "array",
                            "title": "States",
                            "items": {
                                "$ref": "block_state.json#/definitions/blockState"
                            }
                        }
                    }
                }
            ]
        }
    }
}