{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "positionSource": {
            "title": "Position Source",
            "description": "Defines a position source for particles like vibrations",
            "oneOf": [
                {
                    "type": "object",
                    "title": "block",
                    "description": "A block position source",
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "block"
                        },
                        "pos": {
                            "type": "array",
                            "title": "Position",
                            "description": "Block coordinates [x, y, z]",
                            "items": {
                                "type": "number"
                            },
                            "minItems": 3,
                            "maxItems": 3
                        }
                    },
                    "required": ["type", "pos"]
                },
                {
                    "type": "object",
                    "title": "entity",
                    "description": "An entity position source",
                    "properties": {
                        "type": {
                            "type": "string",
                            "const": "entity"
                        },
                        "source_entity": {
                            "type": "string",
                            "title": "Source Entity",
                            "description": "Entity selector or UUID"
                        },
                        "y_offset": {
                            "type": "number",
                            "title": "Y Offset",
                            "description": "Vertical offset from entity position",
                            "default": 0.0
                        }
                    },
                    "required": ["type", "source_entity"]
                }
            ]
        }
    }
}